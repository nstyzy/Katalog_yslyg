@page "/katalog"

<div class="container-fluid">
    <div class="row">
        <div class="col">

            <h2 class="text-center">Доступные услуги</h2>

            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Название</th>
                        <th scope="col">Удаление</th>
                    </tr>

                </thead>
                @foreach (var item in todos)
                {
                    <tbody>
                        <tr>
                            <td>
                                @item.Title
                            </td>

                            <td>
                                <button class="btn btn-danger" @onclick="(()=>DeleteTodo(item))">Удалить</button>
                            </td>
                        </tr>
                    </tbody>
                }

            </table>

            <div class="row">
                <div class="col">
                    <input class="form-control" placeholder="Название услуги" @bind="newTodo" />

                </div>
                <div class="col">
                    <button class="btn btn-dark" @onclick="AddTodo"> Добавить услугу</button>
                </div>
            </div>



        </div>
    </div>

</div>

@code {

    private IList<KatalogItem> todos = new List<KatalogItem>();


    private string newTodo;

    private void AddTodo()

    {
        if (!string.IsNullOrWhiteSpace(newTodo))
        {
            todos.Add(new KatalogItem { Title = newTodo });
            newTodo = string.Empty;
        }
    }

    private void DeleteTodo(KatalogItem deletedItem)
    {
        todos.Remove(deletedItem);
    }

}
